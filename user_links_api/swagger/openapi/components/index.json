{
  "responses": { 

    "UnauthorizedResponse": {
      "description": "Returned after making request with invalid credentials",
      "content": {
        "application/json": {
          "schema": {
            "example": {
              "errors": {
                "detail": [
                  "Authentication credentials were not provided"
                ]
              }
            }
          }
        }
      }
    },

    "SuccessfulSignInResponse": {
      "description": "Successful sign in",
      "content": {
        "application/json": {
          "schema": {
            "type": "object",
            "description": "Successful authentication response body",
            "properties": {
              "user": {
                "$ref": "#components/schemas/User"
              },
              "token": {
                "type":"string",
                "example":"Bearer <token>"
              }
            }
          }
        }
      }
    },

    "Collections":{
      "description": "Page of All Collections",
      "content": {
        "application/json": {
          "schema": {
            "type": "object",
            "description": "Page of All Collections",
            "properties": {
              "count": {
                "type":"integer",
                "example":"2"},
              "next":{
                "type":"string",
                "example":"null"},
              "previous": {
                "type":"string",
                "example":"null"},
              "results": {
                "type": "array",
                "items": {"$ref": "#components/schemas/QuerySetsCollections"}
              }         
            }
          }
        }
      }
    },

    "Links":{
      "description": "Page of All Links",
      "content": {
        "application/json": {
          "schema": {
            "type": "object",
            "description": "Page of All Links",
            "properties": {
              "count": {
                "type":"integer",
                "example":"2"},
              "next":{
                "type":"string",
                "example":"null"},
              "previous": {
                "type":"string",
                "example":"null"},
              "results": {
                "type": "array",
                "items": {"$ref": "#components/schemas/QuerySetsLinks"}
              }         
            }
          }
        }
      }
    }  

  },

  "requestBodies": {

    "AuthRequestBody": {
      "content": {
        "application/json": {
          "schema": {
            "type": "object",
            "properties": {
              "identity": {
                "type": "string"
              },
              "password": {
                "type": "string"
              }
            }
          },
          "examples": {
            "user@user.com": {
              "summary": "An example of a user",
              "value": {
                "identity": "user@user.com",
                "password": "user"
              }
            }
          }
        }
      }
    },

    "RegisterRequestBody": {
      "content": {
        "application/json": {
          "schema": {
            "type": "object",
            "properties": {
              "email": {
              "type": "string"
              },
              "password": {
                "type": "string"
              }              
            }
          },
          "examples": {
            "test@user.com": {
              "summary": "An example of a user",
              "value": {
                "email": "user@user.com",
                "password": "user"
              }
            }
          }
        }
      }
    },

    "UpdateUserRequestBody": {
      "content": {
        "multipart/form-data": {
          "schema": {
            "type": "object",
            "properties": {
              "password": {
                "type": "string",
                "example": ""
              },
              "email": {
                "type": "string",
                "example": ""
              }
            }
          }
        }
      }
    },

    "ResetPasswordRequestBody": {
      "content": {
        "multipart/form-data": {
          "schema": {
            "type": "object",
            "properties": {
              "email": {
                "type": "string",
                "example": "user@user.com"
              },
              "password": {
                "type": "string",
                "example": ""
              }
            }
          }
        }
      }
    },

    "CollectionRequestBody": {
      "content": {
        "multipart/form-data": {
          "schema": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string",
                "example": "First"
              },
              "short_description": {
                "type": "string",
                "example": "Very Interesting"
              },
              "owner": {
                "type": "integer",
                "example": "1"
              }
            }
          }
        }
      }
    },

    "CollectionUpdateRequestBody": {
      "content": {
        "multipart/form-data": {
          "schema": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string",
                "example": ""
              },
              "short_description": {
                "type": "string",
                "example": ""
              }
            }
          }
        }
      }
    },

    "LinkRequestBody": {
      "content": {
        "multipart/form-data": {
          "schema": {
            "type": "object",
            "properties": {
              "url": {
                "type": "string",
                "example": "https://education.yandex.ru/journal/kak-napisat-krasivyy-kod"
              },
              "collection": {
                "type": "integer",
                "enum": [1,2,3,4]
              }
            }
          }
        }
      }
    },

    "LinkUpdateRequestBody": {
      "content": {
        "multipart/form-data": {
          "schema": {
            "type": "object",
            "properties": {
              "title": {
                "type": "string",
                "example": ""
              },
              "description": {
                "type": "string",
                "example": ""
              },
              "kind_link": {
                "type": "string",
                "enum": ["WEBSITE","BOOK","ARTICLE","MUSIC","VIDEO"]
              },
              "collection": {
                "type": "integer",
                "enum": [1,2,3,4]
              }
            }
          }
        }
      }
    }

  },

  "schemas": {

    "Token": {
      "description": "Token model",
      "type": "object",
      "required": [
        "token"
      ],
      "properties": {
        "token": {
          "type": "string",
          "enum": {"token":"Bearer <token>"}
        }
      }
    },

    "User": {
      "description": "User model",
      "type": "object",
      "required": [
        "email",
        "status"
      ],
      "properties": {
        "email": {
          "type": "string",
          "example": "test@user.com"
        },
        "status": {
          "type": "string",
          "example": "active"
        },
        "role": {
          "type": "string",
          "example": "user"
        },
        "id": {
          "type": "integer",
          "example": "123"
        }
        
      }
    },

    "QuerySetsCollections": {
      "anyOf":[
        {
          "type": "array",
          "$ref": "#components/schemas/Collection"
          },
        {
          "type": "array",
          "$ref": "#components/schemas/Collection"
        }
      ]
    },

    "Collection": {
      "description": "Collection model",
      "type": "object",
      "required": [
        "id"
      ],
      "properties": {
        "id": {
          "type": "integer",
          "example": "1"
        },
        "name": {
          "type": "string",
          "example": "New"
        },
        "short_description": {
          "type": "string",
          "example": "Very Interesting"
        },
        "created_at": {
          "type": "string",
          "example": "11-11-2024 12:00"
        },
        "updated_at": {
          "type": "string",
          "example": "11-11-2024 12:00"
        },
        "owner": {
          "type": "string",
          "example": "1"
        }        
      }
    },

    "QuerySetsLinks": {
      "anyOf":[
        {
          "type": "array",
          "$ref": "#components/schemas/Link"
          },
        {
          "type": "array",
          "$ref": "#components/schemas/Link"
        }
      ]
    },

    "Link": {
      "description": "Link model",
      "type": "object",
      "required": [
        "id"
      ],
      "properties": {
        "id": {
          "type": "integer",
          "example": "1"
        },
        "title": {
          "type": "string",
          "example": "New"
        },
        "description": {
          "type": "string",
          "example": "Very Interesting"
        },
        "url_page": {
          "type": "string",
          "example": "https://www.google.com/"
        },
        "kind_link": {
          "type": "string",
          "example": "WEBSITE"
        },
        "created_at": {
          "type": "string",
          "example": "11-11-2024 12:00"
        },
        "updated_at": {
          "type": "string",
          "example": "11-11-2024 12:00"
        },
        "owner": {
          "type": "integer",
          "example": "1"
        },
        "collection":{
            "type": "array",
            "items": {"example":[1,2,3]}
        }     
      }
    },

    "LinksCollekction": {
      "anyOf":[
        {
          "type": "array",
          "$ref": "#components/schemas/CollectionLink"
          },
        {
          "type": "array",
          "$ref": "#components/schemas/CollectionLink"
        }
      ]
    },
    "CollectionLink": {
      "description": "Link model",
      "type": "object",
      "required": [
        "id"
      ],
      "properties": {
        "id": {
          "type": "integer",
          "example": "1"
        }
      }
    }
  },

  "securitySchemes": {
    "BearerScheme": {
      "type": "http",
      "description": "Enter your JWT token",
      "scheme": "bearer",
      "bearerFormat": "Bearer"
    }
  }
}