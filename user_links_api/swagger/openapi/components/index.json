{
  "responses": { 

    "UnauthorizedResponse": {
      "description": "Returned after making request with invalid credentials",
      "content": {
        "application/json": {
          "schema": {
            "example": {
              "errors": {
                "detail": [
                  "Authentication credentials were not provided"
                ]
              }
            }
          }
        }
      }
    },

    "SuccessfulSignInResponse": {
      "description": "Successful sign in",
      "content": {
        "application/json": {
          "schema": {
            "type": "object",
            "description": "Successful authentication response body",
            "properties": {
              "user": {
                "$ref": "#components/schemas/User"
              },
              "token": {
                "type":"string",
                "example":"Bearer <token>"
              }
            }
          }
        }
      }
    },

    "Collections":{
      "description": "Page of All Collections",
      "content": {
        "application/json": {
          "schema": {
            "type": "object",
            "description": "Page of All Collections",
            "properties": {
              "count": {
                "type":"integer",
                "example":"2"},
              "next":{
                "type":"string",
                "example":"null"},
              "previous": {
                "type":"string",
                "example":"null"},
              "results": {
                "type": "array",
                "items": {"$ref": "#components/schemas/QuerySetsCollections"}
              }         
            }
          }
        }
      }
    },

    "Collection":{
      "description": "Page of One Collection",
      "content": {
        "application/json": {
          "schema": {
            "type": "object",
            "description": "Page of One Collection",
            "properties": {
              "id": {
                "type": "integer",
                "example": "1"
              },
              "name": {
                "type": "string",
                "example": "New"
              },
              "description": {
                "type": "string",
                "example": "Very Interesting"
              },
              "created_at": {
                "type": "string",
                "example": "2024-11-14T23:10:45.126975+03:00"
              },
              "updated_at": {
                "type": "string",
                "example": "2024-11-14T23:10:45.126975+03:00"
              },
              "owner": {
                "type": "string",
                "example": "1"
              },
              "links": {
                "type": "array",
                "items": {"$ref": "#components/schemas/QuerySetsLinks"}
              }        
            }
          }
        }
      }
    },

    "Links":{
      "description": "Page of All Links",
      "content": {
        "application/json": {
          "schema": {
            "type": "object",
            "description": "Page of All Links",
            "properties": {
              "count": {
                "type":"integer",
                "example":"2"},
              "next":{
                "type":"string",
                "example":"null"},
              "previous": {
                "type":"string",
                "example":"null"},
              "results": {
                "type": "array",
                "items": {"$ref": "#components/schemas/QuerySetsLinks"}
              }         
            }
          }
        }
      }
    },

    "Link": {
      "description": "Link model",
      "content": {
        "application/json": {
          "schema": {
            "type": "object",
            "description": "Page of One Link",
            "properties": {
              "id": {
                "type": "integer",
                "example": "1"
              },
              "title": {
                "type": "string",
                "example": "New"
              },
              "description": {
                "type": "string",
                "example": "Very Interesting"
              },
              "url_page": {
                "type": "string",
                "example": "https://www.google.com/"
              },
              "image":{
                "type": "string",
                "example": "/media/images/238.jpg"
              },
              "kind_link": {
                "type": "string",
                "example": "WEBSITE"
              },
              "created_at": {
                "type": "string",
                "example": "2024-11-14T23:10:45.126975+03:00"
              },
              "updated_at": {
                "type": "string",
                "example": "2024-11-14T23:10:45.126975+03:00"
              },
              "owner": {
                "type": "integer",
                "example": "1"
              },
              "collection":{
                  "type": "list",
                  "example":[1,2,3]
              }
            }
          }
        }
      }
    },

    "NotAuthorizated":{
      "description": "Returned When User is not Authorizated",
      "content": {
        "application/json": {
          "schema": {
            "type": "object",
            "description": "View Without Authorization",
            "properties": {
              "detail": {
                "type":"string",
                "example":"Authentication credentials were not provided."
              }
            }
          }
        }
      }
    },
    "InvalidData":{
      "description": "Returned after sending invalid data",
      "content": {
        "application/json": {
          "schema": {
            "properties": {
              "Status": {
                "type":"string",
                "example":"Sent Invalid Data"
              }
            }
          }
        }
      }
    }

  },

  "requestBodies": {

    "AuthRequestBody": {
      "content": {
        "application/json": {
          "schema": {
            "type": "object",
            "properties": {
              "identity": {
                "type": "string"
              },
              "password": {
                "type": "string"
              }
            }
          },
          "examples": {
            "user@user.com": {
              "summary": "An example of a user",
              "value": {
                "identity": "user@user.com",
                "password": "user"
              }
            }
          }
        }
      }
    },

    "RegisterRequestBody": {
      "content": {
        "application/json": {
          "schema": {
            "type": "object",
            "properties": {
              "email": {
              "type": "string"
              },
              "password": {
                "type": "string"
              }              
            }
          },
          "examples": {
            "test@user.com": {
              "summary": "An example of a user",
              "value": {
                "email": "user@user.com",
                "password": "user"
              }
            }
          }
        }
      }
    },

    "UpdateUserRequestBody": {
      "content": {
        "multipart/form-data": {
          "schema": {
            "type": "object",
            "properties": {
              "password": {
                "type": "string",
                "example": ""
              },
              "email": {
                "type": "string",
                "example": ""
              }
            }
          }
        }
      }
    },

    "ResetPasswordRequestBody": {
      "content": {
        "multipart/form-data": {
          "schema": {
            "type": "object",
            "properties": {
              "email": {
                "type": "string",
                "example": "user@user.com"
              },
              "password": {
                "type": "string",
                "example": ""
              }
            }
          }
        }
      }
    },

    "CollectionRequestBody": {
      "content": {
        "multipart/form-data": {
          "schema": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string",
                "example": "First"
              },
              "description": {
                "type": "string",
                "example": "Very Interesting"
              }
            }
          }
        }
      }
    },

    "CollectionUpdateRequestBody": {
      "content": {
        "multipart/form-data": {
          "schema": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string",
                "example": ""
              },
              "description": {
                "type": "string",
                "example": ""
              }
            }
          }
        }
      }
    },

    "LinkRequestBody": {
      "content": {
        "multipart/form-data": {
          "schema": {
            "type": "object",
            "properties": {
              "url": {
                "type": "string",
                "example": "https://education.yandex.ru/journal/kak-napisat-krasivyy-kod"
              }
            }
          }
        }
      }
    },

    "LinkUpdateRequestBody": {
      "content": {
        "multipart/form-data": {
          "schema": {
            "type": "object",
            "properties": {
              "title": {
                "type": "string",
                "example": ""
              },
              "description": {
                "type": "string",
                "example": ""
              },
              "kind_link": {
                "type": "string",
                "enum": ["WEBSITE","BOOK","ARTICLE","MUSIC","VIDEO"]
              },
              "collection_add": {
                "type": "integer",
                "enum": [1,2,3,4]
              },
              "collection_remove": {
                "type": "integer",
                "enum": [1,2,3,4]
              }
            }
          }
        }
      }
    }

  },

  "schemas": {

    "Token": {
      "description": "Token model",
      "type": "object",
      "required": [
        "token"
      ],
      "properties": {
        "token": {
          "type": "string",
          "enum": {"token":"Bearer <token>"}
        }
      }
    },

    "User": {
      "description": "User model",
      "type": "object",
      "required": [
        "email",
        "status"
      ],
      "properties": {
        "email": {
          "type": "string",
          "example": "test@user.com"
        },
        "status": {
          "type": "string",
          "example": "active"
        },
        "role": {
          "type": "string",
          "example": "user"
        },
        "id": {
          "type": "integer",
          "example": "123"
        }
        
      }
    },

    "QuerySetsCollections": {
      "anyOf":[
        {
          "type": "array",
          "$ref": "#components/schemas/Collection"
          },
        {
          "type": "array",
          "$ref": "#components/schemas/Collection"
        }
      ]
    },

    "Collection": {
      "description": "Collection model",
      "type": "object",
      "required": [
        "id"
      ],
      "properties": {
        "id": {
          "type": "integer",
          "example": "1"
        },
        "name": {
          "type": "string",
          "example": "New"
        },
        "description": {
          "type": "string",
          "example": "Very Interesting"
        },
        "created_at": {
          "type": "string",
          "example": "2024-11-14T23:10:45.126975+03:00"
        },
        "updated_at": {
          "type": "string",
          "example": "2024-11-14T23:10:45.126975+03:00"
        },
        "owner": {
          "type": "string",
          "example": "1"
        }        
      }
    },

    "QuerySetsLinks": {
      "anyOf":[
        {
          "type": "array",
          "$ref": "#components/schemas/Link"
          },
        {
          "type": "array",
          "$ref": "#components/schemas/Link"
        }
      ]
    },

    "Link": {
      "description": "Link model",
      "type": "object",
      "required": [
        "id"
      ],
      "properties": {
        "id": {
          "type": "integer",
          "example": "1"
        },
        "title": {
          "type": "string",
          "example": "New"
        },
        "description": {
          "type": "string",
          "example": "Very Interesting"
        },
        "url_page": {
          "type": "string",
          "example": "https://www.google.com/"
        },
        "image":{
            "type": "string",
            "example": "/media/images/238.jpg"
        },
        "kind_link": {
          "type": "string",
          "example": "WEBSITE"
        },
        "created_at": {
          "type": "string",
          "example": "2024-11-14T23:10:45.126975+03:00"
        },
        "updated_at": {
          "type": "string",
          "example": "2024-11-14T23:10:45.126975+03:00"
        },
        "owner": {
          "type": "integer",
          "example": "1"
        },
        "collection":{
          "type": "list",
          "example":[1,2,3]
      }   
      }
    },

    "LinksCollekction": {
      "anyOf":[
        {
          "type": "array",
          "$ref": "#components/schemas/CollectionLink"
          },
        {
          "type": "array",
          "$ref": "#components/schemas/CollectionLink"
        }
      ]
    },
    "CollectionLink": {
      "description": "Link model",
      "type": "object",
      "required": [
        "id"
      ],
      "properties": {
        "id": {
          "type": "integer",
          "example": "1"
        }
      }
    }
  },

  "securitySchemes": {
    "BearerScheme": {
      "type": "http",
      "description": "Enter your JWT token",
      "scheme": "bearer",
      "bearerFormat": "Bearer"
    }
  }
}