{
    "/api/v1/users/": {
        "get": {
            "description": "Information about User",
            "tags": [
                "Users"
            ],
            "responses": {
                "200": {
                    "description": "Returned when request body is valid",
                    "content": {
                        "application/json": {
                        "schema": {
                            "type": "object",
                            "description": "User Information",
                            "properties": {
                            "email": {
                                "type":"string",
                                "example":"user@user.com"
                                    }
                                }
                            }
                        }
                    }
                },
                "401": {
                    "$ref": "#components/responses/NotAuthorizated"
                }
            }
        },

        "patch": {
            "description": "Update user information",
            "tags": [
                "Users"
            ],
            "requestBody": {
                "$ref": "#/components/requestBodies/UpdateUserRequestBody"
            },
            "responses": {
                "200": {
                    "description": "Returned when request body is valide",
                    "content": {
                        "application/json": {
                        "schema": {
                            "type": "object",
                            "description": "Update",
                            "properties": {
                            "Status": {
                                "type":"string",
                                "example":"Updated: ['password', 'email']"
                                    }
                                }
                            }
                        }
                    }
                },
                "400": {
                    "description": "Invalid Data",
                    "content": {
                        "application/json": {
                        "schema": {
                            "type": "object",
                            "description": "Invalid Data",
                            "properties": {
                            "Status": {
                                "type":"string",
                                "example":"Not Updated: Invalid Data"
                                    }
                                }
                            }
                        }
                    }
                },
                "401": {
                    "$ref": "#components/responses/NotAuthorizated"
                },
                "403": {
                    "description": "UnSuccessful Update",
                    "content": {
                        "application/json": {
                        "schema": {
                            "type": "object",
                            "description": "Email Is Used Already",
                            "properties": {
                            "detail": {
                                "type":"string",
                                "example":"Unsuccessful: This email is registered."
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    }

}