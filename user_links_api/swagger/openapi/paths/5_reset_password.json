{
    "/api/v1/users/reset_password/{user_id}/": {
        "post": {
            "description": "Update user information",
            "tags": [
                "User"
            ],
            "parameters": [
                {
                  "name": "user_id",
                  "in": "path",
                  "description": "Id",
                  "schema": {
                    "type": "integer"
                  }
                }
              ],
            "requestBody": {
                "$ref": "#/components/requestBodies/ResetPasswordRequestBody"
            },
            "responses": {
                "200": {
                   "description": "Returned when request body is valid",
                    "content": {
                        "application/json": {
                            "schema": {
                                "properties": {
                                    "status": {
                                        "type": "object",
                                        "example": {
                                            "Password": [
                                                "Reseted"
                                            ]
                                        }
                                    }
                                }
                            }
                        }
                    }
                },
                "400": {
                    "description": "Returned when request body is not valid",
                    "content": {
                        "application/json": {
                            "schema": {
                                "properties": {
                                    "errors": {
                                        "type": "object",
                                        "example": {
                                            "password": [
                                                "This field may not be blank."
                                            ]
                                        }
                                    }
                                }
                            }
                        }
                    }
                },
                "401": {
                    "description": "Returned after sending invalid set of credentials",
                    "content": {
                        "application/json": {
                            "schema": {
                                "properties": {
                                    "errors": {
                                        "type": "object",
                                        "example": {
                                            "non_field_errors": [
                                                "invalid_credentials"
                                            ]
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}